#!/bin/sh
prefix=@prefix@

usage()
{
    cat <<EOF
Usage: geos-config [OPTIONS]
Options:
     [--prefix]
     [--version]
     [--libs]
     [--cflags]
     [--ldflags]
     [--includes]
     [--jtsport]
EOF
    exit $1
}
if test $# -eq 0; then
  usage 1 1>&2
fi
while test $# -gt 0; do
case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
esac
case $1 in
    --prefix)
    echo @prefix@
     ;;
    --version)
    echo @VERSION@
     ;;
    --cflags)
    echo -I@prefix@/include 
      ;;
    --libs)
      echo -L@prefix@/lib -lgeos
      ;;
    --ldflags)
      echo -L@prefix@/lib
      ;;
    --includes)
      echo @prefix@/include
      ;;
    --jtsport)
    echo @JTS_PORT@ 
      ;;
    *)
      usage 1 1>&2
      ;;
  esac
  shift
done

